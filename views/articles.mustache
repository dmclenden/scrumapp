
<html>
<head>

  {{> header}}

</head>

<body>

  <center><h1>My Notes</h1></center>


  <div class="container">

  {{> menu}}

  
  <div class="list-group">
    {{#articles}}

    <div class="d-flex w-200 justify-content-between">
       <a class="row clickable" href="{{title}}">
       <h3 class="mb-1">{{title}}</h5>
        </a>
    </div>
    <p class="mb-1">{{body}}</p>

  <div class="article-action-button">
    <a href="/users/articles/edit/{{articleid}}">
      <button type="button" class="btn btn-primary">Edit</button>
    </a>

    <form action="/users/delete-article" method="POST">
      <input type="hidden" name="articleId" value={{articleid}} />
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>
  </div>


    {{/articles}}
  </div>
  

</div>


  {{> footer}}

